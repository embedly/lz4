#!/bin/bash
DEBNAME="lz4"
ROOT="${PWD}/debroot"
ARCH="amd64"
MINORVERSION="0.1"
VERSION="${MINORVERSION}.${BUILD_NUMBER}"
HADOOP_NATIVE="${ROOT}/mnt/hadoop/lib/native/"
LIBDIR="${ROOT}/usr/lib"

make install DESTDIR="${ROOT}" PREFIX=/usr LIBDIR="${LIBDIR}"
mkdir -p "${HADOOP_NATIVE}"
cp -rf "${LIBDIR}/*" "${HADOOP_NATIVE}"

fpm -s dir \
    -t deb \
    --name "lz4" \
    --force \
    -C "${ROOT}" \
    -a "${ARCH}" \
    --version "${VERSION}" \
    --after-install "build/after-install" \
    .

DEB="${DEBNAME}_${VERSION}_${ARCH}.deb"

if [[ -n "${DEPLOY}" ]]; then
    mv "${DEB}" "/mnt/debs/"
    cp "/mnt/debs/${DEB}" /opt/reprepro-incoming-precise
fi
